<p id="notice"><%= notice %></p>

<div class="col-md-6">
  <h1 class="alert alert bg-warning text-dark mt-3"><%= t('.head') %></h1>
</div>
  <div class="container mt-4 mb-5">
  <p>
    <strong><%= t('.subj') %></strong>
    <%= @task.subj %>
  </p>

  <p>
    <strong><%= t('.descript') %></strong>
    <%= @task.descript %>
  </p>

  
  <p>
    <strong><%= t('.deadline') %></strong>
    <%= @task.deadline %>
  </p>
  

 

  <% if user_signed_in? %>
    <% if @task.user.email == current_user.email || current_user.admin?%>
      <p>
        <strong><%= t('.status') %></strong>
        <%= @task.status %>
      </p>
    <% end %>
    <% if current_user.admin?%>
      <p>
        <strong><%= t('.hidden') %></strong>
        <%= @task.hidden %>
      </p>
    <% end %>
    <p>
      <strong><%= t('.email') %></strong>
      <%= @task.user.email %>
    </p>
    <% if @task.user.email == current_user.email || current_user.admin?%>
      <%= link_to "#{t('.edit')}", edit_task_path(@task), class: "btn btn-outline-primary btn-sm col-md-4" %>
    <% end %>
  <% end %>
  <%= link_to "#{t('.back')}", tasks_path, class: "btn btn-outline-secondary btn-sm col-md-2" %> <!-- rake routes -> Prefix_path -->
</div>